<div class="container">
	<h1>Nuevo Producto</h1>

	<div class="row">
		<div class="col-md-12">
			<form {{action 'createProduct' on="submit" }}> {{!-- Pasar id selected como param --}}

				<div class="form-group">
					<label>Nombre</label>
					{{input value=model.product.name class="form-control" maxlength=30}}
				</div>

				<div class="form-group">
					<label>Descripci√≥n</label>
					{{input value=model.product.description class="form-control" }}
				</div>

				<div class="form-group">
					<label>Precio</label>
					{{input value=model.product.price class="form-control" maxlength=20}}
				</div>

				<div class="form-group">
				  <label for="sel1">Tipo de producto:</label>
{{!-- 

                            {{#select-combo content=model.product_promise  optionValuePath='Id' optionLabelPath='name'                 }}
                            {{/select-combo}} --}}

				<select name="role" class="form-control" value="target.value"  >
 				{{#each model.product_promise as |tipo|}}
 					 <option value="{{tipo.id}}">{{tipo.id}} {{tipo.name}} </option>
 				{{/each}}
			</select>
				</div>
				<button type="submit" class="btn btn-default">Crear</button>
			</form>
		</div>
	</div>
</div>
